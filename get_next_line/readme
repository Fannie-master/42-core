#include <stdio.h>

void countCalls() {
    static int count = 0;  // Static variable
    count++;
    printf("This function is called %d times.\n", count);
}

int main() {
    countCalls();  // Output: 1
    countCalls();  // Output: 2
    countCalls();  // Output: 3
    return 0;
}
